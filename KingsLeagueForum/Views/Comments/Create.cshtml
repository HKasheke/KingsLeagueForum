@model KingsLeagueForum.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-3">Add Comment</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="DiscussionId" value="@ViewBag.DiscussionId"/>

            <div class="mb-3">
                <label  class="control-label">Comment</label>
                <textarea asp-for="Content" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
			<div class="mb-3">
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="GetDiscussion" asp-route-id="@ViewBag.DiscussionId">Back to Thread</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
